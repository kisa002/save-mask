<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:id="@+id/layout_splash">

    <ImageView
        android:id="@+id/iv_splash_title"
        android:alpha="0"
        android:layout_width="149dp"
        android:layout_height="15dp"
        android:src="@drawable/splash_title"
        android:layout_marginBottom="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_splash_logo"/>
    
    <ImageView
        android:id="@+id/iv_splash_logo"
        android:alpha="0"
        android:layout_width="168.7dp"
        android:layout_height="119.7dp"
        android:src="@drawable/splash_logo"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <ImageView
        android:layout_width="52.3dp"
        android:layout_height="10.7dp"
        android:src="@drawable/haeyum"
        android:layout_marginBottom="41.3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/v_splash_fade"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>