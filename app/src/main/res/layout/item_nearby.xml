<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_itemNearby_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/kopubdotum_bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_itemNearby_addr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/kopubdotum_bold"
        android:text="Address"
        android:textColor="#6f6f6f"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/iv_itemNearby_stat"
        app:layout_constraintStart_toStartOf="@id/tv_itemNearby_name"
        app:layout_constraintTop_toBottomOf="@id/tv_itemNearby_name" />

    <TextView
        android:id="@+id/tv_itemNearby_fixTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입고 시간"
        android:textSize="13sp"
        android:textColor="#6f6f6f"
        android:fontFamily="@font/kopubdotum_light"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_itemNearby_addr"
        app:layout_constraintTop_toBottomOf="@id/tv_itemNearby_addr"/>

    <TextView
        android:id="@+id/tv_itemNearby_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Time"
        android:textSize="13sp"
        android:textColor="#6f6f6f"
        android:fontFamily="@font/kopubdotum_light"
        android:layout_marginLeft="13.3dp"
        app:layout_constraintStart_toEndOf="@id/tv_itemNearby_fixTime"
        app:layout_constraintTop_toTopOf="@id/tv_itemNearby_fixTime"/>
    
    <ImageView
        android:id="@+id/iv_itemNearby_stat"
        android:layout_width="50.7dp"
        android:layout_height="34dp"
        android:src="@drawable/plenty"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_itemNearby_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_itemNearby_time"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#c9c9c9"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_itemNearby_time"/>

</androidx.constraintlayout.widget.ConstraintLayout>