<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoticeActivity"
    android:background="#80000000"
    android:id="@+id/layout_notice">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/rounded_button1"
        android:backgroundTint="#FFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="#2b3078"
            android:textSize="20sp"
            android:fontFamily="@font/kopubdotum_bold"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/v_notice_stroke"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/stroke"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_notice_title"/>
        
        <TextView
            android:id="@+id/tv_notice_context"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="내용"
            android:lineHeight="21sp"
            android:textSize="16sp"
            android:textColor="#343434"
            android:fontFamily="@font/kopubdotum_medium"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_notice_stroke"
            app:layout_constraintBottom_toTopOf="@id/btn_notice_ok"/>
        
        <Button
            android:id="@+id/btn_notice_ok"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rounded_button2"
            android:text="확인"
            android:textColor="#ffff"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>