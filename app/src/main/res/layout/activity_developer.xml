<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeveloperActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200.3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/up_gra"/>

    <ImageView
        android:id="@+id/iv_developer_back"
        android:onClick="onClick"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_back_new"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_developer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:weightSum="2"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/iv_developer_back">

        <TextView
            android:id="@+id/tv_setting_birthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubdotum_bold"
            android:textSize="20sp"
            android:textColor="#2b3078"
            android:text="개발자 정보"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"/>

        <TextView
            android:id="@+id/tv_setting_birthSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kopubdotum_bold"
            android:textSize="16sp"
            android:textColor="#8a8a8a"
            android:text="Developer Information"
            android:layout_marginTop="5dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/stroke"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_developer_face1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/face_1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/ll_developer"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_developer_introduce1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:autoSizeTextType="uniform"
        android:lineHeight="20sp"
        android:fontFamily="@font/kopubdotum_medium"
        android:textColor="#000000"
        android:text="@string/face1_introduce"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toEndOf="@id/iv_developer_face1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_developer_face1"/>

    <TextView
        android:id="@+id/tv_developer_job1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer"
        android:textColor="#2b3078"
        android:textSize="13sp"
        android:fontFamily="@font/kopubdotum_bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_developer_introduce1"
        app:layout_constraintStart_toStartOf="@id/tv_developer_introduce1"/>

    <TextView
        android:id="@+id/tv_developer_email1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vnycall74@naver.com"
        android:textColor="#8a8a8a"
        android:textSize="12sp"
        android:fontFamily="@font/kopubdotum_bold"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_developer_job1"
        app:layout_constraintStart_toStartOf="@id/tv_developer_job1"/>

    <ImageView
        android:id="@+id/iv_developer_face2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/face_2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/iv_developer_face1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_developer_introduce2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:lineHeight="20sp"
        android:fontFamily="@font/kopubdotum_medium"
        android:textColor="#000000"
        android:text="@string/face2_introduce"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toEndOf="@id/iv_developer_face2"
        app:layout_constraintTop_toTopOf="@id/iv_developer_face2"/>

    <TextView
        android:id="@+id/tv_developer_job2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designer"
        android:textColor="#2b3078"
        android:textSize="13sp"
        android:fontFamily="@font/kopubdotum_bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_developer_introduce2"
        app:layout_constraintStart_toStartOf="@id/tv_developer_introduce2"/>

    <TextView
        android:id="@+id/tv_developer_email2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="owovv11@naver.com"
        android:textColor="#8a8a8a"
        android:textSize="12sp"
        android:fontFamily="@font/kopubdotum_bold"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tv_developer_job2"
        app:layout_constraintStart_toStartOf="@id/tv_developer_job2"/>

</androidx.constraintlayout.widget.ConstraintLayout>