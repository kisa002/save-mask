<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.naver.maps.map.MapFragment"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_main_currentLocation"
            android:onClick="onClick"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icon_current"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="108dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_main_search"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onClick"
            android:text="마스크 조회"
            android:textSize="16sp"
            android:textColor="#FFFF"
            android:fontFamily="@font/kopubdotum_bold"
            android:background="@drawable/rounded_button1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_main_share"
            android:onClick="onClick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/share_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cl_main_storeInfo"/>

        <Button
            android:id="@+id/btn_main_storeClose"
            android:onClick="onClick"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icon_back_new"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@id/cl_main_storeInfo"
            app:layout_constraintEnd_toEndOf="parent">
        </Button>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/shadow_gradient"
            app:layout_constraintBottom_toTopOf="@id/cl_main_storeInfo"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_storeInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="60dp"
            android:background="#FFFF"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="15dp"
                app:layout_constraintBottom_toTopOf="@id/ll_main_statusTable">

                <TextView
                    android:id="@+id/tv_main_storeName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/kopubdotum_bold"
                    android:includeFontPadding="false"
                    android:text="약국 이름"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:layout_marginEnd="25dp"
                    app:layout_constraintEnd_toStartOf="@+id/iv_main_storeStatus"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_main_storeAddr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/kopubdotum_medium"
                    android:includeFontPadding="false"
                    android:text="대한민국의 수도는 서울입니다."
                    android:textColor="#ffff"
                    android:textSize="15sp"
                    android:layout_marginEnd="25dp"
                    app:layout_constraintEnd_toStartOf="@+id/iv_main_storeStatus"
                    app:layout_constraintStart_toStartOf="@id/tv_main_storeName"
                    app:layout_constraintTop_toBottomOf="@id/tv_main_storeName" />
                
                <ImageView
                    android:id="@+id/iv_main_storeStatus"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/empty"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="@id/tv_main_storeName"
                    app:layout_constraintBottom_toBottomOf="@id/tv_main_storeAddr"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/ll_main_statusTable"
                android:layout_width="0dp"
                android:layout_height="125dp"
                android:orientation="horizontal"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="20dp"
                android:weightSum="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_main_fixStoreTime">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#dcf1da">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/main_plenty2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e6ebdf"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#e6ebdf"
                        android:src="@drawable/main_some2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e6ebdf">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ebdfdf"
                        android:src="@drawable/main_few2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_main_fixStoreTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="입고 시간"
                android:textColor="#8a8a8a"
                android:textSize="14sp"
                android:fontFamily="@font/kopubdotum_bold"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_main_storeTime"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_main_storeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00 00:00"
                android:textColor="#8a8a8a"
                android:textSize="14sp"
                android:fontFamily="@font/kopubdotum_bold"
                android:layout_marginRight="50dp"
                app:layout_constraintTop_toTopOf="@id/tv_main_fixStoreTime"
                app:layout_constraintStart_toEndOf="@id/tv_main_fixStoreTime"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_main_toastDay"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/blue_popup"
            android:text="월"
            android:textSize="12sp"
            android:textColor="#ffff"
            android:fontFamily="@font/kopubdotum_bold"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:background="@drawable/white_popup"
            app:layout_constraintStart_toEndOf="@id/tv_main_toastDay"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>