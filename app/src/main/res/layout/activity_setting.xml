<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200.3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/up_gra"/>
    
    <ImageView
        android:id="@+id/iv_setting_back"
        android:onClick="onClick"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_back_new"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="35dp"
        android:weightSum="2"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/iv_setting_back"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_setting_birth"
            android:onClick="onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tv_setting_birthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotum_bold"
                android:textSize="20sp"
                android:textColor="#2b3078"
                android:text="출생년도 끝자리 다시 설정하기"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_setting_birthSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotum_bold"
                android:textSize="16sp"
                android:textColor="#8a8a8a"
                android:text="마스크 5부제 알람 요일을 바꿉니다."
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_setting_birthTitle"/>

            <ImageView
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:src="@drawable/next"
                app:layout_constraintTop_toTopOf="@id/tv_setting_birthTitle"
                app:layout_constraintBottom_toBottomOf="@id/tv_setting_birthSubtitle"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/stroke"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_setting_developer"
            android:onClick="onClick"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp">

            <TextView
                android:id="@+id/tv_setting_developerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotum_bold"
                android:textSize="20sp"
                android:textColor="#2b3078"
                android:text="개발자 정보"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_setting_developerSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kopubdotum_bold"
                android:textSize="16sp"
                android:textColor="#8a8a8a"
                android:text="Developer Information"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_setting_developerTitle"/>

            <ImageView
                android:layout_width="11dp"
                android:layout_height="20dp"
                android:src="@drawable/next"
                app:layout_constraintTop_toTopOf="@id/tv_setting_developerTitle"
                app:layout_constraintBottom_toBottomOf="@id/tv_setting_developerSubtitle"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/stroke"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>